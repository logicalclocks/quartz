    "@types/rc-slider": "^8.6.6",
    "@types/react": "^16.14.0",
    "@types/react-datepicker": "^3.1.8",
    "@types/react-dom": "^16.9.14",
    "@types/rebass": "^4.0.10",
    "@types/rebass__forms": "^4.0.6",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
